services:
  backend:
    image: ghcr.io/pyrodex/homelab-inventory/backend:latest
    container_name: homelab-inventory-backend
    volumes:
      - ./data:/app/data
      - ./targets:/app/prometheus_targets
    environment:
      - FLASK_ENV=production
      - DATABASE_PATH=/app/data/homelab.db
      - PROMETHEUS_EXPORT_PATH=/app/prometheus_targets
      - CORS_ORIGINS=*
      # Backup configuration
      - BACKUP_DIRECTORY=/app/data/backups
      - BACKUP_RETENTION_DAYS=30
      - BACKUP_SCHEDULE=0 2 * * *
    healthcheck:
      test: ["CMD", "python", "-c", "import urllib.request; urllib.request.urlopen('http://localhost:5000/api/health').read()"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 10s
    restart: unless-stopped
    networks:
      - homelab-network
  frontend:
    image: ghcr.io/pyrodex/homelab-inventory/frontend:latest
    container_name: homelab-inventory-frontend
    ports:
      - 5000:80
    depends_on:
      backend:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "wget", "--quiet", "--tries=1", "--spider", "http://localhost/"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 10s
    restart: unless-stopped
    networks:
      - homelab-network
  sqlite-web:
    image: coleifer/sqlite-web
    container_name: homelab-inventory-sqlite-web
    environment:
      - SQLITE_DATABASE=homelab.db
    volumes:
      - ./data:/data
    ports:
      - 5001:8080
    restart: unless-stopped
    networks:
      - homelab-network

networks:
  homelab-network:
    driver: bridge
